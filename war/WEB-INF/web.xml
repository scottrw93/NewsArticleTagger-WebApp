<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

	<servlet>
		<servlet-name>ArticlesOverviewServlet</servlet-name>
		<servlet-class>ucd.scott.fyp.article.ArticlesOverviewServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ArticlesOverviewServlet</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ArticleViewServlet</servlet-name>
		<servlet-class>ucd.scott.fyp.article.WebAppTaggerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ArticleViewServlet</servlet-name>
		<url-pattern>/articleview</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>DatastoreUpdaterServlet</servlet-name>
		<servlet-class>ucd.scott.fyp.datastore.DatastoreUpdaterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DatastoreUpdaterServlet</servlet-name>
		<url-pattern>/cron/mycronjob</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>DatastoreCleanerServlet</servlet-name>
		<servlet-class>ucd.scott.fyp.datastore.DatastoreCleanerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DatastoreCleanerServlet</servlet-name>
		<url-pattern>/cron/cleanDatastore</url-pattern>
	</servlet-mapping>
	
	<!-- Comment Out for Local Use
	<security-constraint>
    <web-resource-collection>
        <web-resource-name>cron</web-resource-name>
        <url-pattern>/cron/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
        <role-name>admin</role-name>
    </auth-constraint>
	</security-constraint>
 	-->
 	
	<welcome-file-list>
		<welcome-file>index</welcome-file>
	</welcome-file-list>
</web-app>
